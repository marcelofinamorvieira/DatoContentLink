{
  "name": "datocms-visual-editing",
  "version": "1.0.3",
  "description": "DatoCMS visual editing overlays without Vercel dependencies.",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "LICENSES.md",
    "CHANGELOG.md",
    "docs/usage.gif"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "format:check": "prettier --check \"{src,tests}/**/*.ts\"",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "keywords": [
    "datocms",
    "visual-editing",
    "stega",
    "content-link",
    "cms",
    "headless-cms",
    "preview"
  ],
  "author": {
    "name": "Marcelo Finamor Vieira",
    "email": "marcelofinamorvieira@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@vercel/stega": "^0.1.2"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.6.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcelofinamorvieira/DatoContentLink.git"
  },
  "bugs": {
    "url": "https://github.com/marcelofinamorvieira/DatoContentLink/issues"
  },
  "homepage": "https://github.com/marcelofinamorvieira/DatoContentLink#readme"
}
